{% extends "layout.njk" %}

{% block content %}
<div class="card">
  <section
    class="avatar"
    style="background: url({{ student.avatar }}) no-repeat center / cover">
  </section>

  <section class="details">
    <form method="POST" action="/students?_method=PUT">
      <h3 id="title">Editar Aluno(a)</h3>

      {% include 'students/fields.njk' %}

      <input type="hidden" name="id" value="{{ student.id }}">
      <div class="form-btn">
        <button type="submit">Salvar</button>
    </form>

        <form id="btn-delete" method="POST" action="/students?_method=DELETE">
          <input type="hidden" name="id" value="{{ student.id }}">
          <button type="submit">Deletar</button>
        </form>
      </div>
  </section>
</div>

{% include '../confirm.njk' %}

{% endblock content %}