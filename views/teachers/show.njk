{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background: url({{ teacher.avatar }}) no-repeat center center / cover"></section>

  <section class="details">
    <h3 id="title">Detalhes</h3>

    <div class="information">
      <div>Nome completo</div>
      <div>{{ teacher.name }}</div>
    </div>

    <div class="information">
      <div>Idade</div>
      <div>{{ teacher.age }}</div>
    </div>

    <div class="information">
      <div>Grau de Escolaridade</div>
      <div>{{ teacher.school }}</div>
    </div>

    <div class="information">
      <div>Tipo de aula</div>
      <div>{{ teacher.type_class }}</div>
    </div>

    <div class="information">
      <div>Acompanhamento</div>
      <div>{{ teacher.occupation }}</div>
    </div>

    <div class="information">
      <div>Desde</div>
      <div>{{ teacher.created }}</div>
    </div>
    
    <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

  </section>
</div>

{% endblock content %}